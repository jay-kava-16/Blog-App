<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>Driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>db_url</param-name>
        <param-value>jdbc:mysql://localhost:3306/blogapp</param-value>
    </context-param>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>ServletFiles.HomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ServletFiles.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>ServletFiles.registrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addBlogServlet</servlet-name>
        <servlet-class>ServletFiles.addBlogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ServletFiles.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editBlogServlet</servlet-name>
        <servlet-class>ServletFiles.editBlogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteBlogServlet</servlet-name>
        <servlet-class>ServletFiles.deleteBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/HomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/registrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addBlogServlet</servlet-name>
        <url-pattern>/addBlogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editBlogServlet</servlet-name>
        <url-pattern>/editBlogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteBlogServlet</servlet-name>
        <url-pattern>/deleteBlogServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
